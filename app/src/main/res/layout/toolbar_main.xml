<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/main_toolbar"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:gravity="center_vertical"
  android:orientation="horizontal"
  android:padding="4dp">

  <ImageView
    android:id="@+id/back_button"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginEnd="4dp"
    android:layout_marginStart="4dp"
    android:padding="8dp"
    android:src="@drawable/ic_format_quote_white_48dp"
    android:tint="@color/colorAccent" />

  <TextView
    android:id="@+id/action_bar_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/app_name"
    android:textColor="@color/dark_tertiary_text"
    android:textSize="18sp" />

  <ImageView
    android:id="@+id/home_search_button"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:padding="12dp"
    android:src="@drawable/ic_action_search"
    android:tint="@color/dark_tertiary_text" />

  <ImageView
    android:id="@+id/home_option_button"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:padding="12dp"
    android:src="@drawable/ic_more_horiz_white_48dp"
    android:tint="@color/dark_tertiary_text" />

</LinearLayout>