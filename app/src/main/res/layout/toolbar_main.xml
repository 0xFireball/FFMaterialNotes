<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

  <ImageView
      android:id="@+id/back_button"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:layout_marginEnd="4dp"
      android:layout_marginStart="4dp"
      android:contentDescription="@string/description_back_button"
      android:padding="12dp"
      android:src="@drawable/app_icon"/>

  <TextView
      android:id="@+id/action_bar_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="@string/app_name"
      android:textColor="@color/light_primary_text"
      android:textSize="18sp"/>

  <ImageView
      android:id="@+id/bubble_button"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:contentDescription="@string/description_bubble_button"
      android:padding="12dp"
      android:src="@drawable/ic_fiber_smart_record_white_48dp"
      android:tag="@string/description_bubble_button"
      android:tint="@color/light_primary_text"
      android:visibility="gone"/>

  <ImageView
      android:id="@+id/new_note_button"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:contentDescription="@string/description_add_button"
      android:padding="12dp"
      android:src="@drawable/ic_add_white_48dp"
      android:tag="@string/description_bubble_button"
      android:tint="@color/light_primary_text"
      android:visibility="gone"/>

</LinearLayout>