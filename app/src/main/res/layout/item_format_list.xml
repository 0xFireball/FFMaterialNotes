<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">

  <include layout="@layout/layout_modify_format"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_check_box_outline_blank_white_24dp"
        android:tint="@color/material_blue_grey_500"
        />

    <EditText
        android:id="@+id/text"
        android:textSize="@dimen/text_font_size"
        style="@style/FormatText"
        android:hint="@string/format_hint_list"/>
  </LinearLayout>

  <include layout="@layout/layout_dashed_dark"/>
</LinearLayout>